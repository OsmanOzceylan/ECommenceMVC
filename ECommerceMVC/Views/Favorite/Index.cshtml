@model List<ECommerceMVC.Core.Models.Response.ProductResponseModel>

<h2>Favorilerim</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (!Model.Any())
{
    <p>Favori ürün bulunmamaktadır.</p>
}
else
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100">
                    <img src="@(item.ImageUrl ?? "/images/default.png")" class="card-img-top" alt="@item.ProductName" style="height:200px; object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">Fiyat: @item.UnitPrice.ToString("C")</p>

                        <form asp-action="RemoveFromFavorites" asp-controller="Favorite" method="post">
                            <input type="hidden" name="productId" value="@item.ProductID" />
                            <button type="submit" class="btn btn-outline-danger w-100">Favorilerden Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
